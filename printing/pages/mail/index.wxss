.container{
  background-color: rgba(237, 241, 252, 1);
}
.input{
  font-size: 15px;
}
.mail-wrapper{
  display: flex;
  flex-direction: row;
  align-content: center;
  margin: 10px;
  border-bottom: 1px solid #ddd;
}
.mail-wrapper:last-child{
  border-bottom: none;
  padding-bottom: 0;
}
.mail-avatar{
  width: 39px;
  height: 39px;
  padding: 10px;
}
.mail-content{
  flex: 1;
}
.mail-name{
  font-size: 16px;
  color: #000000;
}
.mail-desc{
  font-size: 12px;
  color: #6B6B6B;
}
.mail-num{
  font-size: 12px;
  color: #6B6B6B;
}
.mail-phone{
  width: 32px;
  height: 32px;
  padding: 10px;
}
.letter-bar{
  position: fixed;
  right: 10px;
  top: 20px;
  font-size: 12px;
  color: #666;
}