<view class="container">
    <view class="m-0-5">
        <mp-form id="apply">
            <mp-cell prop="school" title="登录账号" ext-class="table-form-cell">
                <view class="label-right">
                    <input class="weui-input" maxlength="8" placeholder="最多可以设置8位字符" />
                </view>
            </mp-cell>
            <mp-cell prop="school" title="密码" ext-class="table-form-cell">
                <view class="label-right">
                    <input class="weui-input" maxlength="10" minlength="4" placeholder="由英文字母和数字组成的4-10位字符" />
                </view>
            </mp-cell>
            <mp-cell prop="school" title="姓名" ext-class="table-form-cell">
                <view class="label-right">
                    <input class="weui-input" maxlength="8" placeholder="请填写用户名" />
                </view>
            </mp-cell>
            <mp-cell prop="school" title="性别" ext-class="table-form-cell">
                <view class="weui-cell weui-cell_select label-right">
                    <view class="weui-cell__bd">
                        <picker bindchange="bindSexChange" value="{{sexIndex}}" range="{{sexs}}">
                            <view class="weui-select weui-select_in-select-after">{{sexs[sexIndex]}}</view>
                        </picker>
                    </view>
                </view>
            </mp-cell>
            <mp-cell prop="school" title="邮箱" ext-class="table-form-cell">
                <view class="label-right">
                    <input class="weui-input" maxlength="8" placeholder="邮箱账号@域名。如：whj@sina.com.cn" />
                </view>
            </mp-cell>
            <mp-cell prop="school" title="手机号" ext-class="table-form-cell">
                <view class="label-right">
                    <input class="weui-input" maxlength="8" placeholder="请填写手机号码" />
                </view>
            </mp-cell>
            <mp-cell prop="school" title="微信号" ext-class="table-form-cell">
                <view class="label-right">
                    <input class="weui-input" maxlength="8" placeholder="请填写微信号码" />
                </view>
            </mp-cell>
            <mp-cell prop="school" title="QQ号" ext-class="table-form-cell">
                <view class="label-right">
                    <input class="weui-input" maxlength="8" placeholder="请填写QQ号码" />
                </view>
            </mp-cell>
            <mp-cell prop="school" title="学校" ext-class="table-form-cell">
                <view class="weui-cell weui-cell_select label-right">
                    <view class="weui-cell__bd">
                        <picker bindchange="bindSchoolChange" value="{{schoolIndex}}" range="{{schools}}">
                            <view class="weui-select weui-select_in-select-after">{{schools[schoolIndex]}}</view>
                        </picker>
                    </view>
                </view>
            </mp-cell>
            <mp-cell prop="school" title="部门" ext-class="table-form-cell">
                <view class="weui-cell weui-cell_select label-right">
                    <view class="weui-cell__bd">
                        <picker bindchange="bindSchoolChange" value="{{schoolIndex}}" range="{{schools}}">
                            <view class="weui-select weui-select_in-select-after">{{schools[schoolIndex]}}</view>
                        </picker>
                    </view>
                </view>
            </mp-cell>
            <mp-cell prop="school" title="学科" ext-class="table-form-cell">
                <view class="weui-cell weui-cell_select label-right">
                    <view class="weui-cell__bd">
                        <picker bindchange="bindSchoolChange" value="{{schoolIndex}}" range="{{schools}}">
                            <view class="weui-select weui-select_in-select-after">{{schools[schoolIndex]}}</view>
                        </picker>
                    </view>
                </view>
            </mp-cell>
            <mp-cell prop="school" title="角色" ext-class="table-form-cell">
                <view class="weui-cell weui-cell_select label-right">
                    <view class="weui-cell__bd">
                        <picker bindchange="bindSchoolChange" value="{{schoolIndex}}" range="{{schools}}">
                            <view class="weui-select weui-select_in-select-after">{{schools[schoolIndex]}}</view>
                        </picker>
                    </view>
                </view>
            </mp-cell>
        </mp-form>
        <view class="text-center">
            <button class="mini-btn btn-blue mr20" size="mini">提交</button>
            <button class="mini-btn btn-yellow" size="mini">关闭</button>
        </view>
    </view>
</view>